- content_for :title do
  Delivery Details

= link_to 'Back to Deliveries', deliveries_path(date: delivery.delivered_on), data: { pjax: true }

.clear

%dl.delivery-details{ data: { resource: :delivery } }
  %dt Delivered By
  %dd= delivery.deliverer

  %dt Received By
  %dd= mail_to delivery.user.email, delivery.user.name

  %dt Delivered On
  %dd= delivery.formatted_delivered_on

  %dt Total Packages
  %dd= delivery.package_count


%table.receipts-listing{ data: { collection: :receipts } }
  %thead
    %tr
      %th.receipt-recipient Recipient
      %th.receipt-package-count Package Count
      %th.actions
  %tbody= render partial: 'receipt', collection: delivery.receipts
