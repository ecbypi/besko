- content_for :title do
  Deliveries

= form_tag deliveries_path, method: :get, id: "delivery-search" do
  .input
    = label_tag :filter, "Filter by"
    = select_tag :filter, options_for_select(delivery_search_filter_options, delivery_search_params[:filter])

  .input
    = label_tag :sort, "Sort by"
    = select_tag :sort, options_for_select(delivery_search_sort_options, delivery_search_params[:sort]), data: { sort: true }

  .input
    = label_tag :delivered_by, "Delivered by"
    = select_tag :delivered_by, options_for_select(delivery_search_deliverer_options, delivery_search_params[:delivered_by]), include_blank: true

#delivery-search-results{ data: { pjax_container: true } }
  = render 'search_results', deliveries: @deliveries
