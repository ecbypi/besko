= cache [receipt.user, receipt.number_packages] do
  %tr{ data: { resource: :receipt, recipient: receipt.user_id } }
    = simple_fields_for 'delivery[receipts_attributes][]', receipt do |f|
      %td
        = receipt.user.name
        = f.input_field :user_id, as: :hidden, value: receipt.user_id, id: receipt_field_id(receipt, :user_id)
      %td= f.input_field :number_packages, min: 1, id: receipt_field_id(receipt, :number_packages)
      %td= f.input_field :comment, id: receipt_field_id(receipt, :comment)
      %td= link_to 'Remove', '#', class: 'button', data: { remove: true }
