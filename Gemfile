gem 'simple_form'
gem 'decent_exposure'
gem 'haml'
gem 'haml-rails'
gem 'yaml_db'
gem 'ldapsearch', :git => 'gitolite@eddd.mit.edu:edd_d/ldapsearch.git'

# Gems used only for assets and not required
# in production environments by default.
